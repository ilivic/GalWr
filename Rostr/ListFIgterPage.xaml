<Page x:Class="Rostr.ListFIgterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rostr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListFIgterPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBox x:Name="TxtName"/>
            <TextBox x:Name="TxtInfo"/>
            <TextBox x:Name="TxtParam"/>
            <Button Content="Select" Click="SelectNewImage"/>
            <Button Content="Save" Click="SaveNewWrFoDataBase"/>
                </StackPanel>
    </Grid>
</Page>
